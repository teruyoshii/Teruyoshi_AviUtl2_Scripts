--twopoint
--param:32767
-- paramは最大音量
local st = obj.getpoint(0)
local ed = obj.getpoint(1)
local maxLoudness = obj.getpoint("param")
local loudness = {}
obj.getaudio(loudness, "audiobuffer", "spectrum", 1)
local ratio = math.max(math.min(loudness[1] / maxLoudness, 1), 0) -- 0～1に正規化
return st + (ed - st) * ratio